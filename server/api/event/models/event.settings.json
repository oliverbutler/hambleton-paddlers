{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "Event"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "date_start": {
      "type": "datetime"
    },
    "date_end": {
      "type": "datetime"
    },
    "files": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "attendees": {
      "plugin": "users-permissions",
      "collection": "user"
    },
    "summary": {
      "type": "text"
    },
    "type": {
      "collection": "event-type"
    },
    "location": {
      "type": "text"
    },
    "level": {
      "type": "decimal",
      "max": 3,
      "min": 0
    },
    "cancelled": {
      "type": "boolean",
      "default": false
    },
    "cancel_reason": {
      "type": "text"
    }
  }
}
