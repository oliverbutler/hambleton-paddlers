{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "Event"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "date_start": {
      "type": "datetime",
      "required": true
    },
    "date_end": {
      "type": "datetime",
      "required": true
    },
    "files": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "type": {
      "collection": "event-type"
    },
    "lead_member": {
      "model": "member"
    },
    "forms": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "location": {
      "type": "text",
      "required": true,
      "default": "Carlton Lodge, Thirsk"
    },
    "status": {
      "type": "component",
      "repeatable": false,
      "component": "event.status"
    },
    "attendees": {
      "type": "component",
      "repeatable": true,
      "component": "event.members"
    },
    "ask_kit": {
      "type": "boolean",
      "default": true
    },
    "subtitle": {
      "type": "string"
    }
  }
}
